<Window x:Class="newapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical" >

            <TextBox x:Name="Login" Margin="0 20 0 0" FontSize="25" BorderBrush="Crimson" Text="{Binding logg}"/>

            <TextBox x:Name="Password"  Margin="0 20 0 0" FontSize="25" BorderBrush="Crimson" Text="{Binding pass}" />
            <Button x:Name="log" Margin="0 20 0 0" FontSize="20" Click="log_Click" Height="40" Content="Login"/>
        </StackPanel>

    </Grid>
</Window>
